<div class="container">

<div class="row">
  <div class="col-md-3">
    <%= image_tag(user_avatar(@user)) %>
  </div>
  <div class="col-md-9">
    <h1 class="buffer-section"><%= @user.name %></h1>
    <% if @user == current_user %>
      <p class="buffer-top"><%= link_to 'Редактировать профиль',
                                        edit_user_path(@user), class: 'btn btn-default' %></p>
    <% end %>
  </div>
</div>

<div class="row buffer-top">
  <div class="col-md-3">
    <div class="row">
      <div class="buffer-right">
        <h2>Мои списки</h2>
        <% if @user.lists.any? %>
          <%= render partial: 'lists/list', collection: @user.lists %>
        <% else %>
          <p>Пока нет ни одного списка</p>
        <% end %>
        <% if @user == current_user %>
          <div class="buffer-top">
            <%= link_to 'Создать список', new_list_path, class: 'btn btn-success btn-xs' %>
          </div>
        <% end %>
      </div>
    </div>
  </div>

  <div class="col-md-9">
    <div class="row">
      <h2>Мои книги (<%= Book.where(user: @user).count %>)</h2>
      <% if @user.books.any? %>
        <%= render partial: 'books/book', collection: @user.books %>
      <% else %>
        <p>Пока не добавлено ни одной книги</p>
      <% end %>
   </div>
  </div>
</div>

</div>