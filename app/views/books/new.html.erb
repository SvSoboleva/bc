<h1>Новая книга</h1>

<div class="row">
  <div class="col-md-6 buffer-top">
    <%= render 'form' %>
  </div>
  <div class="col-md-6 buffer-top">
    <% if @books_from_net  %>
        <h3>Выберем обложку?</h3>
        <% @books_from_net.each_with_index do |book, i| %>
            <div class="thumbnail thumbnail-search">
              <a href="" target="_blank">
                <%= link_to image_tag(book[:image_url]), create_search_book_path(i), :method => :get, class: 'img-responsive' %>
              </a>
            </div>
        <% end %>
    <% end %>
  </div>
</div>
