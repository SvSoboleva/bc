<div class="col-md-9 col-md-3" xmlns="http://www.w3.org/1999/html">
<div class="thumbnail">
  <div class="thumbnail-inner">
    <div class="book-img">
      <%= link_to image_tag(book_img(book)), book_path(book) %>
    </div>
  </div>
  <div class="book-title">
    <div><%= book.title %></div>
    <%= book.author %>
  </div>
  <div class="list-action">
    <% if current_user_can_add_book? %>
      <%= link_to(fa_icon('plus'), create_booklist_path(book)) %>
    <% end %>
  </div>
</div>
</div>